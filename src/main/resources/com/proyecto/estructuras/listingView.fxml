<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="720.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto.estructuras.listingController">
    <VBox alignment="TOP_CENTER" prefHeight="540.0" prefWidth="720.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets top="40.0" left="20.0" right="20.0" bottom="20.0" />
        </padding>
        <Label text="Listados de Estudiantes">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="btnAllStudents" mnemonicParsing="false" onAction="#handleShowAllStudents" text="Todos los Estudiantes (por Puntaje Creciente)" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
