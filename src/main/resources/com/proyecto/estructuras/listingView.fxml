        </HBox>

        <TableView fx:id="tblStudents" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID"/>
                <TableColumn fx:id="colName" text="Nombre Completo" prefWidth="250.0"/>
                <TableColumn fx:id="colScore" text="Puntaje SocioeconÃ³mico" prefWidth="150.0"/>
                <TableColumn fx:id="colStatus" text="Estado Residencia" prefWidth="120.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>