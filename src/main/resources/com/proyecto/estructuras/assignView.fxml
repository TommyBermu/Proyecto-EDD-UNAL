<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="720.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto.estructuras.assignController">
    <VBox alignment="TOP_CENTER" prefHeight="540.0" prefWidth="720.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets top="40.0" left="20.0" right="20.0" bottom="20.0" />
        </padding>
        <Label text="Asignación de Cupos de Residencia">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />

        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Cupos Disponibles:">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextField fx:id="txtAvailableSlots" promptText="Número de cupos" prefWidth="100.0" />
            <Button fx:id="btnUpdateSlots" mnemonicParsing="false" onAction="#handleUpdateSlots" text="Actualizar Cupos" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="btnExecuteAssignment" mnemonicParsing="false" onAction="#handleExecuteAssignment" text="Ejecutar Asignación de Cupos" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>

        <Label fx:id="lblAssignmentSummary" textFill="#343a40" wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>

        <SplitPane dividerPositions="0.5" prefHeight="150.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <VBox alignment="TOP_CENTER" spacing="10.0">
                <Label text="Estudiantes con Residencia Asignada" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TableView fx:id="tblAssignedStudents" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colAssignedId" text="ID" prefWidth="70.0"/>
                        <TableColumn fx:id="colAssignedName" text="Nombre" prefWidth="150.0"/>
                        <TableColumn fx:id="colAssignedScore" text="Puntaje"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
            <VBox alignment="TOP_CENTER" spacing="10.0">
                <Label text="Estudiantes sin Residencia Asignada" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TableView fx:id="tblUnassignedStudents" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUnassignedId" text="ID" prefWidth="70.0"/>
                        <TableColumn fx:id="colUnassignedName" text="Nombre" prefWidth="150.0"/>
                        <TableColumn fx:id="colUnassignedScore" text="Puntaje"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </SplitPane>
    </VBox>
</AnchorPane>